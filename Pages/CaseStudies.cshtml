@page
@model CaseStudiesModel
@{
    ViewData["Title"] = "Case Studies - Macfish Digital Solutions";
}

<!-- Hero Section -->
<section class="hero-section position-relative bg-gradient-primary">
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
    <div class="container position-relative z-1 py-5">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center text-white">
                <div class="d-flex flex-wrap gap-2 justify-content-center mb-4">
                    <span class="badge bg-primary">#RealWorldProjects</span>
                    <span class="badge bg-info">#SuccessStories</span>
                    <span class="badge bg-success">#ClientResults</span>
                </div>
                <h1 class="display-3 fw-bold mb-4">Our Case Studies</h1>
                <p class="lead mb-5">
                    Explore how we've helped businesses transform their ideas into successful
                    digital solutions with measurable results.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Case Studies Grid -->
<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold mb-3">Featured Projects</h2>
                <p class="lead text-muted">From concept to launch - see our work in action</p>
            </div>
        </div>

        <div class="row g-4">
            <!-- Case Study 1: Dreamigos -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg h-100 case-study-card">
                    <div class="row g-0 h-100">
                        <div class="col-md-5">
                            <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 class="img-fluid h-100 w-100 object-fit-cover rounded-start" alt="Dreamigos App">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body p-4 d-flex flex-column h-100">
                                <div class="mb-3">
                                    <span class="badge bg-info mb-2">Self-Improvement</span>
                                    <span class="text-muted small">January 8, 2024</span>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Dreamigos - Dream Interpretation Social App</h3>
                                <p class="text-muted mb-4 flex-grow-1">
                                    Dreamigos is a dream interpretation social media app that allows people
                                    to record their dreams in various media formats and engage with other
                                    people and experts on dream analysis.
                                </p>

                                <div class="mb-4">
                                    <h5 class="fw-bold mb-2">Key Features:</h5>
                                    <div class="d-flex flex-wrap gap-2">
                                        <span class="badge bg-light text-dark">Media Upload</span>
                                        <span class="badge bg-light text-dark">Social Feed</span>
                                        <span class="badge bg-light text-dark">Expert Network</span>
                                        <span class="badge bg-light text-dark">Dream Analysis</span>
                                        <span class="badge bg-light text-dark">Community Building</span>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-0">Results:</h6>
                                            <p class="small text-muted mb-0">10,000+ downloads in first month</p>
                                        </div>
                                        <a href="#" class="btn btn-primary">
                                            View Details <i class="fas fa-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Case Study 2: Eyerus -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg h-100 case-study-card">
                    <div class="row g-0 h-100">
                        <div class="col-md-5">
                            <img src="https://images.unsplash.com/photo-1551836026-d5c2c3af8d6a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 class="img-fluid h-100 w-100 object-fit-cover rounded-start" alt="Eyerus App">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body p-4 d-flex flex-column h-100">
                                <div class="mb-3">
                                    <span class="badge bg-warning mb-2">Security & Safety</span>
                                    <span class="text-muted small">March 5, 2023</span>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Eyerus - GBV Prevention App</h3>
                                <p class="text-muted mb-4 flex-grow-1">
                                    The Eyerus app fights Gender-Based Violence (GBV) in South Africa using
                                    technology and community support. Its launch was attended by key figures
                                    and covered by national media.
                                </p>

                                <div class="mb-4">
                                    <h5 class="fw-bold mb-2">Achievements:</h5>
                                    <div class="d-flex gap-3">
                                        <div class="text-center">
                                            <div class="fw-bold text-primary display-6">1st</div>
                                            <div class="small">MTN App of the Year 2022</div>
                                        </div>
                                        <div class="text-center">
                                            <div class="fw-bold text-primary display-6">1st</div>
                                            <div class="small">MTN App of the Year 2023</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-0">Impact:</h6>
                                            <p class="small text-muted mb-0">50,000+ active users</p>
                                        </div>
                                        <a href="#" class="btn btn-primary">
                                            View Details <i class="fas fa-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Case Study 3: i-Dent-Ify -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg h-100 case-study-card">
                    <div class="row g-0 h-100">
                        <div class="col-md-5">
                            <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 class="img-fluid h-100 w-100 object-fit-cover rounded-start" alt="i-Dent-Ify App">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body p-4 d-flex flex-column h-100">
                                <div class="mb-3">
                                    <span class="badge bg-success mb-2">Artificial Intelligence</span>
                                    <span class="text-muted small">July 12, 2022</span>
                                </div>
                                <h3 class="h4 fw-bold mb-3">i-Dent-Ify - AI Car Damage Detection</h3>
                                <p class="text-muted mb-4 flex-grow-1">
                                    i-DENT-ify collaborated with Tcheck on an AI app for car damage detection.
                                    It uses an advanced AI model trained on 100+ cars to accurately identify
                                    and assess damage in real-time.
                                </p>

                                <div class="mb-4">
                                    <h5 class="fw-bold mb-2">Technology:</h5>
                                    <div class="d-flex flex-wrap gap-2">
                                        <span class="badge bg-light text-dark">Computer Vision</span>
                                        <span class="badge bg-light text-dark">Machine Learning</span>
                                        <span class="badge bg-light text-dark">Real-time Analysis</span>
                                        <span class="badge bg-light text-dark">Damage Assessment</span>
                                        <span class="badge bg-light text-dark">Insurance Integration</span>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-0">Accuracy:</h6>
                                            <p class="small text-muted mb-0">95% damage detection rate</p>
                                        </div>
                                        <a href="#" class="btn btn-primary">
                                            View Details <i class="fas fa-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Case Study 4: E-commerce Platform -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg h-100 case-study-card">
                    <div class="row g-0 h-100">
                        <div class="col-md-5">
                            <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 class="img-fluid h-100 w-100 object-fit-cover rounded-start" alt="E-commerce Platform">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body p-4 d-flex flex-column h-100">
                                <div class="mb-3">
                                    <span class="badge bg-danger mb-2">E-commerce</span>
                                    <span class="text-muted small">November 15, 2023</span>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Premium Fashion E-commerce Platform</h3>
                                <p class="text-muted mb-4 flex-grow-1">
                                    Built a complete Shopify e-commerce solution for a premium fashion brand
                                    with custom integrations, mobile app, and advanced inventory management.
                                </p>

                                <div class="mb-4">
                                    <h5 class="fw-bold mb-2">Metrics:</h5>
                                    <div class="row g-3">
                                        <div class="col-4 text-center">
                                            <div class="fw-bold text-primary">300%</div>
                                            <div class="small">Sales Increase</div>
                                        </div>
                                        <div class="col-4 text-center">
                                            <div class="fw-bold text-primary">40%</div>
                                            <div class="small">Mobile Conversion</div>
                                        </div>
                                        <div class="col-4 text-center">
                                            <div class="fw-bold text-primary">2.5s</div>
                                            <div class="small">Load Time</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-0">Platform:</h6>
                                            <p class="small text-muted mb-0">Shopify Plus + Mobile App</p>
                                        </div>
                                        <a href="#" class="btn btn-primary">
                                            View Details <i class="fas fa-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- More Case Studies -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h3 class="h4 fw-bold mb-4">More Success Stories</h3>
            </div>
        </div>

        <div class="row g-4">
            @{
                var moreStudies = new[]
                {
                        new {
                        title = "Health & Fitness Tracker",
                        category = "Health Tech",
                        color = "bg-info",
                        icon = "fas fa-heartbeat"
                        },
                        new {
                        title = "Education Platform",
                        category = "EdTech",
                        color = "bg-warning",
                        icon = "fas fa-graduation-cap"
                        },
                        new {
                        title = "Logistics Management",
                        category = "Enterprise",
                        color = "bg-success",
                        icon = "fas fa-shipping-fast"
                        },
                        new {
                        title = "Real Estate App",
                        category = "PropTech",
                        color = "bg-danger",
                        icon = "fas fa-home"
                        }
                        };
            }

            @foreach (var study in moreStudies)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 text-center hover-lift">
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <div class="@study.color text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="@study.icon fs-3"></i>
                                </div>
                            </div>
                            <span class="badge @study.color mb-2">@study.category</span>
                            <h4 class="h5 fw-bold mb-3">@study.title</h4>
                            <a href="#" class="text-decoration-none">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- CTA Section -->
        <div class="row mt-5">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 bg-primary text-white shadow-lg">
                    <div class="card-body p-5 text-center">
                        <h2 class="display-5 fw-bold mb-4">Ready to Start Your Project?</h2>
                        <p class="lead mb-4">Let's create your success story together.</p>
                        <a href="/free-quote" class="btn btn-warning btn-lg px-5">
                            Start Your Project <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #1a237e 0%, #311b92 100%);
    }

    .case-study-card {
        transition: transform 0.3s ease;
    }

        .case-study-card:hover {
            transform: translateY(-5px);
        }

    .object-fit-cover {
        object-fit: cover;
    }

    .hover-lift {
        transition: transform 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-10px);
        }
</style>