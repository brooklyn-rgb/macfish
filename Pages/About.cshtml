@page
@model AboutModel
@{
    ViewData["Title"] = "About Us - Macfish Digital Solutions";
}

<section class="hero-section position-relative overflow-hidden">
    <!-- Background Carousel -->
    <div class="hero-bg-carousel">
        <div class="hero-bg" style="background-image:url('/images/banners/meeting.jpg');"></div>
        <div class="hero-bg" style="background-image:url('/images/banners/board.jpg');"></div>
        <div class="hero-bg" style="background-image:url('/images/banners/b.jpg');"></div>
    </div>

    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-60" style="z-index: 1;"></div>

    <div class="container position-relative py-5" style="z-index: 2;">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center text-white">
                <div class="d-flex flex-wrap gap-2 justify-content-center mb-4">
                    <span class="badge bg-primary">#ProblemSolvers</span>
                    <span class="badge bg-info">#FullStack</span>
                    <span class="badge bg-success">#Proactive</span>
                    <span class="badge bg-warning">#Passionate</span>
