    }

        .service-card:hover {
            transform: translateY(-10px);
        }

    .process-timeline {
        position: relative;
        padding-left: 50px;
    }

        .process-timeline::before {
            content: '';
            position: absolute;
            left: 25px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(to bottom, #0d6efd, transparent);
        }

    .process-step {
        position: relative;
        margin-bottom: 40px;
        display: flex;
        align-items: flex-start;
    }

        .process-step:last-child {
            margin-bottom: 0;
        }

        .process-step .step-number {
            position: absolute;
            left: -50px;
            width: 50px;
            height: 50px;
            background: #0d6efd;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .process-step .step-content {
            padding-left: 20px;
        }

        .process-step:hover .step-number {
            transform: scale(1.1);
            transition: transform 0.3s ease;
        }
</style>