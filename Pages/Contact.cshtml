@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Us - Macfish Digital Solutions";
}

<!-- Hero Section -->
<section class="hero-section position-relative bg-gradient-primary">
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
    <div class="container position-relative z-1 py-5">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h1 class="display-3 fw-bold mb-4">Let's Build Something Amazing</h1>
                <p class="lead mb-5">
                    Get in touch with us to discuss your project. We're ready to help bring
                    your vision to life.
                </p>
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <a href="tel:+27662199118" class="btn btn-warning btn-lg">
                        <i class="fas fa-phone me-2"></i>+27 (0) 69 262 9422
                    </a>
                    <a href="mailto:support@macfish.co.za" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-envelope me-2"></i>support@macfish.co.za
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add marquee here -->
<partial name="_Announcement" />

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="row g-4">
                    <!-- Contact Form -->
                    <div class="col-lg-8">
                        <div class="card border-0 shadow-lg">
                            <div class="card-body p-5">
                                <h2 class="h3 fw-bold mb-4">Send us a message</h2>

                                <form id="contactForm">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                                                <label for="name">Your Name *</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="email" class="form-control" id="email" placeholder="Email Address" required>
                                                <label for="email">Email Address *</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                                                <label for="subject">Subject *</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <textarea class="form-control" id="message" placeholder="Your Message" style="height: 150px" required></textarea>
                                                <label for="message">Your Message *</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="consent" required>
                                                <label class="form-check-label" for="consent">
                                                    I consent to Macfish Digital Solutions collecting my data for communication purposes.
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                                Send Message <i class="fas fa-paper-plane ms-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <h3 class="h5 fw-bold mb-4">Contact Information</h3>

                                <div class="mb-4">
                                    <h4 class="h6 fw-bold mb-3">
                                        <i class="fas fa-phone text-primary me-2"></i>Phone
                                    </h4>
                                    <p class="mb-2">
                                        <a href="tel:+27662199118" class="text-decoration-none">+27 (0) 69 262 9422</a>
                                    </p>
                                    <p class="mb-0">
                                        <a href="tel:0692629422" class="text-decoration-none">069 262 9422</a>
                                    </p>
                                </div>

                                <div class="mb-4">
                                    <h4 class="h6 fw-bold mb-3">
                                        <i class="fas fa-envelope text-primary me-2"></i>Email
                                    </h4>
                                    <p class="mb-2">
                                        <a href="mailto:support@macfish.co.za" class="text-decoration-none">support@macfish.co.za</a>
                                    </p>
                                    <p class="mb-0">
                                        <a href="mailto:info@macfish.co.za" class="text-decoration-none">info@macfish.co.za</a>
                                    </p>
                                </div>

                                <div class="mb-4">
                                    <h4 class="h6 fw-bold mb-3">
                                        <i class="fas fa-clock text-primary me-2"></i>Business Hours
                                    </h4>
                                    <p class="mb-1">Monday - Friday: 8:00 AM - 5:00 PM</p>
                                    <p class="mb-0">Saturday: 9:00 AM - 1:00 PM</p>
                                    <p class="small text-muted">South African Time (GMT+2)</p>
                                </div>

                                <div class="mb-4">
                                    <h4 class="h6 fw-bold mb-3">
                                        <i class="fas fa-globe text-primary me-2"></i>Location
                                    </h4>
                                    <p class="mb-0">Based in South Africa</p>
                                    <p class="small text-muted">Serving clients globally</p>
                                </div>

                                <div>
                                    <h4 class="h6 fw-bold mb-3">Follow Us</h4>
                                    <div class="d-flex gap-3">
                                        <a href="#" class="text-primary"><i class="fab fa-linkedin fs-5"></i></a>
                                        <a href="#" class="text-primary"><i class="fab fa-twitter fs-5"></i></a>
                                        <a href="#" class="text-primary"><i class="fab fa-github fs-5"></i></a>
                                        <a href="#" class="text-primary"><i class="fab fa-facebook fs-5"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold mb-3">Frequently Asked Questions</h2>
                <p class="lead text-muted">Quick answers to common questions</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="accordion" id="contactFAQ">
                    <!-- FAQ 1 -->
                    <div class="accordion-item mb-3 border-0 shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                What's the typical response time?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                We typically respond to inquiries within <strong>1 business day</strong>. For urgent
                                matters, please call us directly at <a href="tel:+27662199118">+27 (0) 69 262 9422</a>.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ 2 -->
                    <div class="accordion-item mb-3 border-0 shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                Do you work with international clients?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                Yes! We work with clients across 5 continents. Our team is fluent in English
                                and we're experienced in remote collaboration across different time zones.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ 3 -->
                    <div class="accordion-item mb-3 border-0 shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                What information should I provide for a quote?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                For the most accurate quote, please provide: project goals, target audience,
                                desired features, timeline, and budget range. The more details you can provide,
                                the better we can tailor our proposal.
                            </div>
                        </div>
                    </div>

                    <!-- FAQ 4 -->
                    <div class="accordion-item mb-3 border-0 shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                How do you handle project communication?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                            <div class="accordion-body">
                                We use a combination of tools: Slack for daily communication, Zoom/Teams for
                                meetings, Trello/Jira for project management, and regular progress reports.
                                You'll always know exactly how your project is progressing.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="display-5 fw-bold mb-3">Ready to Start Your Project?</h2>
                <p class="lead mb-0">
                    Get a free consultation and quote for your app or AI project.
                </p>
            </div>
            <div class="col-lg-4 text-end">
                <a href="/freequote" class="btn btn-warning btn-lg px-5">
                    Get Free Quote <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const contactForm = document.getElementById('contactForm');

        contactForm.addEventListener('submit', function(e) {
            e.preventDefault();

            // Get form values
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;

            // Basic validation
            if (!name || !email || !subject || !message) {
                alert('Please fill in all required fields.');
                return;
            }

            // Here you would typically send the form data to your server
            // For now, we'll show a success message
            alert('Thank you for your message! We will get back to you within 24 hours.');
            contactForm.reset();
        });
    });
</script>