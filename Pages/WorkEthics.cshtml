@page
@model WorkEthicsModel
@{
    ViewData["Title"] = "Our Work Ethics & Process - Macfish Digital Solutions";
    ViewData["Description"] = "Learn about our professional work ethics, transparent billing practices, and collaborative approach to software development.";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Hero Header with Image -->
            <div class="text-center mb-5 position-relative overflow-hidden rounded-3">
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="background: linear-gradient(rgba(13, 110, 253, 0.85), rgba(13, 110, 253, 0.9)),
                            url('https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80')
                            center/cover no-repeat;">
                </div>
                <div class="position-relative py-5 px-4">
                    <h1 class="display-4 fw-bold mb-3 text-white">Our Work Ethics & Process</h1>
                    <p class="lead text-white mb-0">
                        Building trust through transparency, communication, and professional excellence.
                    </p>
                </div>
            </div>

            <!-- Introduction with Image -->
            <div class="card border-0 shadow-sm overflow-hidden mb-5">
                <div class="row g-0">
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5">
                            <div class="d-flex align-items-start mb-4">
                                <div class="bg-primary text-white rounded-circle p-3 me-3">
                                    <i class="fas fa-handshake fa-2x"></i>
                                </div>
                                <div>
                                    <h2 class="h4 fw-bold mb-2">A Partnership Built on Trust</h2>
                                    <p class="text-muted mb-0">
                                        At Macfish Digital Solutions, we believe that successful projects are built on clear
                                        communication, mutual respect, and transparent processes.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="https://images.unsplash.com/photo-1573164713714-d95e436ab286?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                             class="img-fluid h-100 w-100 object-fit-cover"
                             alt="Team collaboration meeting"
                             style="min-height: 250px;">
                    </div>
                </div>
            </div>

            <!-- Our Approach Section -->
            <div class="row mb-5">
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-img-top overflow-hidden" style="height: 200px;">
                            <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                                 class="img-fluid w-100 h-100 object-fit-cover"
                                 alt="Team communication">
                        </div>
                        <div class="card-body p-4 text-center">
                            <h3 class="h5 fw-bold mb-3">Clear Communication</h3>
                            <p class="text-muted">
                                We maintain open channels for regular updates and feedback throughout every project phase.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-img-top overflow-hidden" style="height: 200px;">
                            <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                                 class="img-fluid w-100 h-100 object-fit-cover"
                                 alt="Data analysis and transparency">
                        </div>
                        <div class="card-body p-4 text-center">
                            <h3 class="h5 fw-bold mb-3">Transparent Process</h3>
                            <p class="text-muted">
                                Every step of our workflow is visible and understandable to ensure complete alignment.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-img-top overflow-hidden" style="height: 200px;">
                            <img src="https://images.unsplash.com/photo-1506784926709-22f1ec395907?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                                 class="img-fluid w-100 h-100 object-fit-cover"
                                 alt="Time management and efficiency">
                        </div>
                        <div class="card-body p-4 text-center">
                            <h3 class="h5 fw-bold mb-3">Respect for Time</h3>
                            <p class="text-muted">
                                We value your time and ours, with efficient processes and timely project delivery.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Billing & Engagement Models -->
            <div class="card border-0 shadow-lg mb-5 overflow-hidden">
                <div class="row g-0">
                    <div class="col-lg-4">
                        <img src="https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                             class="img-fluid h-100 w-100 object-fit-cover"
                             alt="Financial transparency and billing"
                             style="min-height: 300px;">
                    </div>
                    <div class="col-lg-8">
                        <div class="card-header bg-primary text-white py-4">
                            <h2 class="h4 fw-bold mb-0">
                                <i class="fas fa-file-invoice-dollar me-3"></i>Transparent Billing & Engagement Models
                            </h2>
                        </div>
                        <div class="card-body p-4 p-lg-5">
                            <p class="lead mb-4">
                                We offer flexible engagement models designed to provide the best value and efficiency for your specific needs.
                            </p>

                            <!-- Hourly Model -->
                            <div class="row align-items-center mb-5">
                                <div class="col-md-3 text-center mb-3 mb-md-0">
                                    <img src="https://images.unsplash.com/photo-1543286386-713bdd548da4?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80"
                                         class="img-fluid rounded-circle shadow-sm"
                                         alt="Hourglass time tracking"
                                         style="width: 120px; height: 120px; object-fit: cover;">
                                </div>
                                <div class="col-md-9">
                                    <h3 class="h5 fw-bold mb-3">Hourly Engagement Model</h3>
                                    <p class="text-muted mb-3">
                                        <strong>Perfect for:</strong> Specific tasks, short-term projects, or when scope is clearly defined.
                                    </p>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Billed per hour for actual time spent on your project
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Detailed time tracking with transparent reporting
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Complete control over project scope and budget
                                        </li>
                                        <li>
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Ideal for projects with clear, defined requirements
                                        </li>
                                    </ul>
                                    <div class="alert alert-light border mt-4" role="alert">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        <strong>Recommendation:</strong> For this model, we kindly suggest communicating amendment comments
                                        promptly to help us manage scope efficiently.
                                    </div>
                                </div>
                            </div>

                            <hr class="my-5">

                            <!-- Monthly Model -->
                            <div class="row align-items-center">
                                <div class="col-md-3 text-center mb-3 mb-md-0">
                                    <img src="https://images.unsplash.com/photo-1578575437130-527eed3abbec?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80"
                                         class="img-fluid rounded-circle shadow-sm"
                                         alt="Calendar and planning"
                                         style="width: 120px; height: 120px; object-fit: cover;">
                                </div>
                                <div class="col-md-9">
                                    <h3 class="h5 fw-bold mb-3">Monthly Retainer Model</h3>
                                    <p class="text-muted mb-3">
                                        <strong>Perfect for:</strong> Ongoing development, continuous improvement, and strategic partnerships.
                                    </p>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Fixed monthly fee for dedicated development resources
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Priority access to our development team
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Streamlined communication and faster response times
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Continuous improvement and proactive maintenance
                                        </li>
                                        <li>
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Better predictability and simplified budgeting
                                        </li>
                                    </ul>
                                    <div class="alert alert-success border mt-4" role="alert">
                                        <i class="fas fa-star me-2"></i>
                                        <strong>Recommended for Optimal Collaboration:</strong> This model ensures seamless,
                                        continuous operations and more effective service delivery.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Our Working Process -->
            <div class="mb-5">
                <h2 class="h3 fw-bold mb-4 text-center">Our Collaborative Working Process</h2>
                <div class="row">
                    @{
                        var processSteps = new[]
                        {
                                        new {
                                        number = "01",
                                        title = "Discovery & Planning",
                                        icon = "fas fa-search",
                                        image = "https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "We begin by thoroughly understanding your requirements, goals, and constraints to create a detailed project plan."
                                        },
                                        new {
                                        number = "02",
                                        title = "Regular Communication",
                                        icon = "fas fa-comment-dots",
                                        image = "https://images.unsplash.com/photo-1573164713714-d95e436ab286?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "Weekly check-ins, progress reports, and open channels ensure we're always aligned."
                                        },
                                        new {
                                        number = "03",
                                        title = "Transparent Development",
                                        icon = "fas fa-code",
                                        image = "https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "You'll have visibility into our development process with regular demos and feedback opportunities."
                                        },
                                        new {
                                        number = "04",
                                        title = "Quality Assurance",
                                        icon = "fas fa-check-double",
                                        image = "https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "Rigorous testing and quality checks ensure we deliver robust, reliable solutions."
                                        },
                                        new {
                                        number = "05",
                                        title = "Timely Delivery",
                                        icon = "fas fa-clock",
                                        image = "https://images.unsplash.com/photo-1506784926709-22f1ec395907?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "We respect deadlines and provide clear timelines, keeping you informed of progress."
                                        },
                                        new {
                                        number = "06",
                                        title = "Ongoing Support",
                                        icon = "fas fa-hands-helping",
                                        image = "https://images.unsplash.com/photo-1557804506-669a67965ba0?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                                        description = "Our relationship continues post-launch with maintenance, updates, and support."
                                        }
                                        };
                    }

                    @foreach (var step in processSteps)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="position-relative">
                                    <img src="@step.image"
                                         class="card-img-top"
                                         alt="@step.title"
                                         style="height: 180px; object-fit: cover;">
                                    <span class="position-absolute top-0 start-0 bg-primary text-white rounded-circle m-3"
                                          style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        @step.number
                                    </span>
                                </div>
                                <div class="card-body p-4">
                                    <h3 class="h5 fw-bold mb-2">@step.title</h3>
                                    <p class="text-muted mb-0">@step.description</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Communication Best Practices -->
            <div class="card border-0 shadow-sm mb-5 bg-light overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="https://images.unsplash.com/photo-1551836026-d5c2e0c49b61?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                             class="img-fluid h-100 w-100 object-fit-cover"
                             alt="Team communication and collaboration"
                             style="min-height: 300px;">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body p-4 p-lg-5">
                            <h2 class="h3 fw-bold mb-4">
                                <i class="fas fa-headset me-3 text-primary"></i>Communication Best Practices
                            </h2>

                            <div class="d-flex mb-4">
                                <i class="fas fa-bell text-success fa-2x me-3 mt-1"></i>
                                <div>
                                    <h4 class="h5 fw-bold mb-2">Prompt Communication</h4>
                                    <p class="text-muted mb-0">
                                        To ensure efficient workflow and avoid scope creep, we recommend communicating
                                        feedback and amendment requests as they arise.
                                    </p>
                                </div>
                            </div>

                            <div class="d-flex mb-4">
                                <i class="fas fa-calendar-alt text-primary fa-2x me-3 mt-1"></i>
                                <div>
                                    <h4 class="h5 fw-bold mb-2">Scheduled Reviews</h4>
                                    <p class="text-muted mb-0">
                                        We schedule regular review sessions to discuss progress, gather feedback,
                                        and make adjustments.
                                    </p>
                                </div>
                            </div>

                            <div class="alert alert-info border-0 mt-4" role="alert">
                                <div class="d-flex">
                                    <i class="fas fa-info-circle fa-2x me-3 mt-1"></i>
                                    <div>
                                        <h5 class="alert-heading fw-bold mb-2">Our Commitment to Clarity</h5>
                                        <p class="mb-0">
                                            We understand that clear communication is essential for successful collaboration.
                                            If there has been any previous confusion regarding our processes or billing, we sincerely
                                            apologize.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Call to Action with Background Image -->
            <div class="text-center mb-5 position-relative overflow-hidden rounded-3 py-5 px-4">
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="background: linear-gradient(rgba(13, 110, 253, 0.9), rgba(13, 110, 253, 0.95)),
                            url('https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80')
                            center/cover no-repeat;">
                </div>
                <div class="position-relative">
                    <h2 class="h3 fw-bold mb-4 text-white">Ready to Start Your Project?</h2>
                    <p class="lead mb-4 text-white">
                        Let's discuss how we can work together to bring your vision to life with clarity and confidence.
                    </p>
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <a href="/free-quote" class="btn btn-light btn-lg px-5 fw-bold">
                            <i class="fas fa-comment-dollar me-2"></i>Get a Free Quote
                        </a>
                        <a href="/contact" class="btn btn-outline-light btn-lg px-5">
                            <i class="fas fa-phone me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-header bg-dark text-white py-4 position-relative">
                    <div class="position-absolute top-0 end-0 h-100 w-50 opacity-25">
                        <img src="https://images.unsplash.com/photo-1506784983877-45594efa4cbe?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                             class="img-fluid h-100 w-100 object-fit-cover"
                             alt="FAQ background">
                    </div>
                    <div class="position-relative">
                        <h2 class="h4 fw-bold mb-0">
                            <i class="fas fa-question-circle me-3"></i>Frequently Asked Questions
                        </h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="accordion" id="workEthicsFAQ">
                        <!-- FAQ Items (same as before) -->
                        <div class="accordion-item border-0 mb-3">
                            <h3 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    What's the advantage of the monthly retainer model?
                                </button>
                            </h3>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#workEthicsFAQ">
                                <div class="accordion-body">
                                    The monthly retainer model provides priority access to our team, faster response times,
                                    and continuous development without the need to track individual hours.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item border-0 mb-3">
                            <h3 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    How do you track hours in the hourly model?
                                </button>
                            </h3>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#workEthicsFAQ">
                                <div class="accordion-body">
                                    We use professional time-tracking software that provides detailed reports of how time is spent
                                    on your project with complete transparency.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item border-0">
                            <h3 class="accordion-header">
                                <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    Can we switch between billing models during a project?
                                </button>
                            </h3>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#workEthicsFAQ">
                                <div class="accordion-body">
                                    Yes, we're flexible and can adjust our engagement model as your needs evolve. Many clients
                                    start with hourly billing and switch to a monthly retainer for ongoing maintenance.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="text-center mt-5">
                <p class="text-muted">
                    <i class="fas fa-envelope me-2"></i>For specific questions about our work ethics:
                    <a href="mailto:info@macfish.co.za" class="text-decoration-none">info@macfish.co.za</a>
                </p>
                <p class="small text-muted">
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Schema Markup for SEO -->
